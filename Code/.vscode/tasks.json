{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "extract debug symbols",
                "launch qemu"
            ]
        },
        {
            "label": "extract debug symbols",
            "type": "shell",
            "command": "x86_64-elf-objcopy --only-keep-debug kernel.bin kernel.debug && x86_64-elf-objcopy --strip-debug kernel.bin",
            "problemMatcher": []
        },
        {
            "label": "launch qemu",
            "type": "shell",
            "isBackground": true,
            "command": "qemu-system-i386 -drive format=raw,file=a.img,if=floppy,id=b1 -drive format=raw,file=80m.img,if=ide,index=0,media=disk -boot a -s -S",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(QEMU)",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(QEMU)",
                    "endsPattern": "^(QEMU)"
                }
            }
        }
    ]
}
